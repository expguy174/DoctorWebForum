
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-banner overlay-dark bg-image" style="background-image: url(/Content/assets/img/bg_image_1.jpg);">
    <div class="banner-section">
        <div class="container text-center wow fadeInUp">
            <nav aria-label="Breadcrumb">
                <ol class="breadcrumb breadcrumb-dark bg-transparent justify-content-center py-0 mb-2">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">User</li>
                </ol>
            </nav>
            <h1 class="font-weight-normal">Profile</h1>
        </div> <!-- .container -->
    </div> <!-- .banner-section -->
</div> <!-- .page-banner -->

<section style="background-color: #eee;">
    <div class="container py-4 wow fadeInRight">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div style="background-color: #00d9a5;" class="col-12 text-center text-white py-2 font-weight-bold">Infor</div>
                    <div class="card-body text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">Fullname</h5>
                        <p class="text-muted mb-2">Gender</p>
                        <p class="text-muted mb-2">Date of birth</p>
                        <div class="d-flex justify-content-center align-items-center mb-2">
                            <a href="#!"><i class="mai mai-logo-facebook" style="font-size: 20px"></i></a>
                            <a href="#!"><i class="mai mai-logo-twitter px-3" style="font-size: 20px"></i></a>
                            <a href="#!"><i class="mai mai-logo-instagram" style="font-size: 20px"></i></a>
                        </div>
                        <div class="d-flex justify-content-center mb-2">
                            <a href="@Url.Action("Edit","User")" class="btn btn-primary w-50">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div style="background-color: #00d9a5;" class="col-12 text-left text-white py-2 font-weight-bold">Detail</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Username</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Johnatan Smith</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">0123456789</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Location</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Ha Noi</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Professional</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Dentis</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Experience</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">3 years</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Qualification</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Doctor</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Aichievement</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Nobel prize</p>
                            </div>
                        </div>
                    </div>
                </div>
               
                
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="mt-3 d-flex justify-content-center">
                    <a href="@Url.Action("Index","Login")" class="btn btn-primary w-50">Logout</a>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title font-weight-bold">Support</h6>
                        <p class="card-text">Get fast, free help from our friendly assistants.</p>
                        <button type="button" class="btn btn-primary">Contact Us</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

